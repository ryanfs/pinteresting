<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h3>Edit <%= resource_name.to_s.humanize %></h3>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="form-group">
        <% f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder:"Name", :autofocus => true %>
      </div>


      <div class="form-group">
        <% f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder:"Email", :autofocus => true %>
      </div>

      <div class="form-group">
        <% f.label :enter_current_password %>
        <%= f.password_field :current_password, placeholder:"Current password" ,class: "form-control" %>
         <i>(we need your password in order to make changes)</i>
      </div>

      <div class="form-group">
        <% f.label :change_my_password %>
        <%= f.password_field :password, class: "form-control", placeholder:"Change my password" , :autocomplete => "off" %><i>(leave this blank to keep the same password)</i> 
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <h3>Fuck this shit!</h3>
    <%= button_to "Destroy my account", registration_path(resource_name), :data => { :confirm => "Are you sure? There is no unpressing the NSA button." }, :method => :delete, class: "btn btn-danger" %>

<p style="margin-top:7px;"><%= link_to "or just log out" , destroy_user_session_path, method: :delete %></p>
  </div>
</div>